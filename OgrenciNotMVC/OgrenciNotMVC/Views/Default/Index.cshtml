@using OgrenciNotMVC.Models.EntityFramework
@model  List<TblDersler >
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<table class="table table-bordered">
    <tr>
        <th>LESSON ID    </th>
        <th>LESSON NAME    </th>
        <th>Actions    </th>

    </tr>
    <tbody>
        @foreach (var cls in Model)
        {
        <tr>
            <td>@cls.DersId</td>

            <td>@cls.DersAd</td>
            <td>
                <a href="/Default/Delete/@cls.DersId" class="btn btn-danger">Delete</a>
                <a href="/Default/Update/@cls.DersId" class="btn btn-primary">Update</a>
            </td>
        </tr>
            }
       
        </tbody>

</table>
<a href="/Default/NewLesson" class="btn btn-success">Add New Lesson</a>